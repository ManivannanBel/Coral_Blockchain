<div class="container" style="max-width:60%">

<form class="form-inline" id="search_form" action="/edit_user" method="POST">
     <div class="form-group">
        <label >Search email:</label>
        <input class="form-control" type="email" name="edit_email" value="{{email}}" maxlength="50" >
        <button type="submit" class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
        </button>
        <br>
    </div>
</form>

<form class="" method="POST" action="/update_user">
        <br>
        {{#each result}}
        <input type="hidden" name="old_email" value="{{emailId}}">
        <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" id="fname" name="username" value="{{userName}}" maxlength="25">
        </div>

        <div class="form-group">
        <label >Email id</label>
        <input class="form-control" type="email" name="email" value="{{emailId}}" maxlength="50" >
        </div>

        <div class="form-group">
        <label>Phone number</label>
        <input class="form-control" type="number" name="phone" value="{{phoneNo}}" maxlength="10">
        </div>

        <div class="form-group">
        <label >Old Password</label>
        <input class="form-control" type="password" name="old_password" value="" maxlength="50" >
        </div>

        <div class="form-group">
        <label >New Password</label>
        <input class="form-control" type="password" name="new_password" value="" maxlength="50" >
        </div>
        
        <button type="submit" class="btn btn-primary">Update</button>

        {{/each}}
    </form>
    </div>